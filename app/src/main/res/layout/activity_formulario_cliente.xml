<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Campos do Cliente -->
        <EditText
            android:id="@+id/editNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="@string/hint_nome"
            android:padding="8dp"
            android:inputType="textPersonName"
            android:autofillHints="name" />

        <EditText
            android:id="@+id/editTelefone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/hint_telefone"
            android:inputType="phone"
            android:autofillHints="phone"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/hint_email"
            android:padding="16dp"
            android:inputType="textEmailAddress"
            android:autofillHints="emailAddress" />

        <EditText
            android:id="@+id/editObservacoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_observacoes"
            android:inputType="textMultiLine"
            android:autofillHints="postalAddress"
            android:layout_marginTop="8dp"
            android:minLines="3" />

        <!-- Campos do Endereço -->
        <EditText
            android:id="@+id/editLogradouro"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/hint_logradouro"
            android:padding="8dp"
            android:inputType="text"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/editNumero"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/hint_numero"
            android:inputType="number"
            android:autofillHints="streetAddressLine1"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/editBairro"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/hint_bairro"
            android:padding="8dp"
            android:inputType="text"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/editCidade"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/hint_cidade"
            android:padding="8dp"
            android:inputType="text"
            android:layout_marginTop="8dp"/>

        <EditText
            android:id="@+id/editEstado"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/hint_estado"
            android:padding="8dp"
            android:inputType="text"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/editCep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CEP"
            android:inputType="textPostalAddress"
            android:minHeight="48dp" />
        <!-- Botão de Salvar -->
        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_salvar"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>


